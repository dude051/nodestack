#!/bin/sh

#
# chkconfig: 35 99 99
# description: Node.js /home/nodejs/sample/app.js
#

. /etc/rc.d/init.d/functions

USER="<%= @user %>"
GROUP="<%= @group %>"

DAEMON="<%= @binary_path %>"

# nodejs cookbook is wrong if binary package is used :(
if [ ! -f "$DAEMON" ] ; then
  DAEMON="/usr/bin/node"
fi

ROOT_DIR="<%= @app_dir %>"

SERVER="$ROOT_DIR/<%= @entry %>"
LOG_FILE="<%= @app_dir %>/logs/node.log"

LOCK_FILE="/var/lock/subsys/node-server"

do_start()
{
        export HOME=$ROOT_DIR
        if [ ! -f "$LOCK_FILE" ] ; then
                echo -n $"Starting $SERVER: "
                runuser -l "$USER" -c "$DAEMON $SERVER >> $LOG_FILE &" && echo_success || echo_failure
                RETVAL=$?
                echo
                [ $RETVAL -eq 0 ] && touch $LOCK_FILE
        else
                echo "$SERVER is locked. Remove $LOCK_FILE if you think this is wrong."
                RETVAL=1
        fi
}
do_stop()
{
        echo -n $"Stopping $SERVER: "
        pid=`ps -aefw | grep "$DAEMON $SERVER" | grep -v " grep " | awk '{print $2}'`
        kill -9 $pid > /dev/null 2>&1 && echo_success || echo_failure
        RETVAL=$?
        echo
        [ $RETVAL -eq 0 ] && rm -f $LOCK_FILE
}

case "$1" in
        start)
                do_start
                ;;
        stop)
                do_stop
                ;;
        restart)
                do_stop
                do_start
                ;;
        status)
                status $DAEMON
                ;;
        *)
                echo "Usage: $0 {start|stop|restart}"
                RETVAL=1
esac

exit $RETVAL
